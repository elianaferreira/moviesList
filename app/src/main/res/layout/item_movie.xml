<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/white"
    android:paddingLeft="@dimen/general_margin"
    android:paddingTop="@dimen/general_margin"
    android:paddingRight="@dimen/general_margin">

    <ImageView
        android:id="@+id/img_cinema"
        android:layout_width="@dimen/film_image_size"
        android:layout_height="@dimen/film_image_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_toEndOf="@id/img_cinema"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            style="@style/PrimaryTitle"
            android:text="Title" />

        <TextView
            android:id="@+id/item_description"
            style="@style/SecondaryText"
            android:text="description" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />
</RelativeLayout>