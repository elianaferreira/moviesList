<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesList" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peach</item>
        <item name="colorPrimaryVariant">@color/light_peach</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_peach</item>
        <item name="colorSecondaryVariant">@color/dark_peach</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_peach</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/light_peach</item>


        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="PrimaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_peach</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_peach</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="RatingBar" parent="android:Widget.Holo.RatingBar.Small">
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:colorControlNormal">@color/dark_grey</item>
        <item name="colorControlNormal">@color/dark_grey</item>
    </style>
</resources>